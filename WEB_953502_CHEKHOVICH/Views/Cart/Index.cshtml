@model IEnumerable<CartItem>
@{
    ViewData["Title"] = "Index"; 
}

<h1>Корзина</h1>
<table class="table">
    <thead>
        <tr>
            <th>Товар</th>
            <th>Название</th>
            <th>Количество</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/@item.Computer.Image" alt="No image" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(m => item.Computer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a asp-controller="Cart"
                       asp-action="Delete" asp-route-id="@item.Computer.ComputerId"
                       class="btn btn-outline-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
