@page
@model WEB_953502_CHEKHOVICH.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Администрирование</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].RAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].GraphicsCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].CPU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Computer) {
        <tr>
            <td>
                <img src="~/Images/@item.Image" alt="NoImage" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RAM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GraphicsCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.ComputerGroupId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ComputerId"
                   class="btn btn-outline-info">
                    <span class="fas fa-edit"></span>
                </a> <a asp-page="./Delete" asp-route-id="@item.ComputerId"
                        class="btn btn-outline-danger">
                    <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
